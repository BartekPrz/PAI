<%- include("../starters/header") %>

<div class="container">
    <div class="row">
        <h1>Dodaj swój turniej!</h1>
            <form method="POST" action="/tournaments/new">
                <div class="form-group">
                    Nazwa turnieju: <input class="form-control" type="text" name="tournament[name]" placeholder="Nazwa" required>
                </div>
                <div class="form-group">
                    Czas rozpoczęcia: <input class="form-control" type="date" name="tournament[dates]" placeholder="Czas rozpoczęcia" required>
                </div>
                <div class="form-group">
                    Miejsce turnieju: <input class="form-control" type="text" name="tournament[place]" placeholder="Miejsce turnieju" required>
                </div>
                <div class="form-group">
                    Liczba zawodników: <input class="form-control" type="number" name="tournament[limit]" placeholder="Liczba zawodników" min="1" required>
                </div>
                <div class="form-group">
                    Czas zgłaszania się zawodników: <input class="form-control" type="date" name="tournament[deadline]" placeholder="Czas zgłaszania się zawodników" required>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary" type="submit" value="Zgłoś turniej">
                </div>
            </form>
            <a href="/tournaments">Powrót do strony z turniejami</a>
    </div>
</div>

<%- include("../starters/footer") %>